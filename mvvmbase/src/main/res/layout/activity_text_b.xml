<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.taopao.mvvmbase.TextBViewModel"></variable>

        <import type="com.taopao.mvvmbase.binding.viewadapter.recyclerview.LayoutManagers"></import>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.taopao.mvvmbase.TextBActivity">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl"
            finishRefresh="@{viewModel.mViewStyle.isRefreshing}"
            onRefreshCommand="@{viewModel.f}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                adapter="@{viewModel.mMyAdapter}"
                layoutManagers="@{LayoutManagers.linear()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>